[run]
source = .
omit =
    # Exclude tests
    tests/*
    */tests/*
    
    # Exclude virtual environments
    venv/*
    env/*
    .venv/*
    
    # Exclude configuration files
    *.ini
    *.toml
    *.yml
    *.yaml
    
    # Exclude setup files
    setup.py
    
    # Exclude CI/CD files
    .github/*
    
    # Exclude generated files
    __pycache__/*
    *.pyc
    
    # Exclude data files
    data/*
    
    # Exclude specific directories
    .pytest_cache/*
    
    # Exclude specific scripts
    run_*.py
    start_*.py
    test_*.py

[report]
exclude_lines =
    # Skip any pragma comments
    pragma: no cover
    
    # Skip abstract methods
    @abstract
    
    # Skip defensive assertion code
    raise NotImplementedError
    
    # Skip custom defined debug blocks
    if settings.DEBUG
    
    # Skip conditional imports that can't be covered
    except ImportError
    
    # Skip code blocks executed only when running as script
    if __name__ == .__main__.:

[html]
directory = coverage_html_report