{
  "version": "1",
  "workflows": [
    {
      "name": "WebApp",
      "mode": "sequential",
      "metadata": {
        "agentRequireRestartOnSave": false
      },
      "tasks": [
        {
          "task": "packager.installForAll"
        },
        {
          "task": "port.forward",
          "args": {
            "port": 5002
          }
        },
        {
          "task": "shell.exec",
          "args": {
            "command": "./webapp.sh",
            "options": {
              "waitForPort": 5002,
              "waitForPortTimeout": 30000
            }
          }
        }
      ]
    }
  ]
}