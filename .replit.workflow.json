{
  "workflows": [
    {
      "name": "WebApp",
      "type": "web",
      "command": "python app.py",
      "restartOn": {
        "files": ["./app.py", "./models.py", "./templates/*", "./static/*"]
      }
    },
    {
      "name": "APIServer",
      "type": "web",
      "command": "python run_api.py",
      "restartOn": {
        "files": ["./api.py", "./run_api.py", "./db/models.py", "./db/database.py", "./db/__init__.py", "./src/valuation.py", "./models.py"]
      }
    },
    {
      "name": "API",
      "type": "web",
      "command": "python run_api.py",
      "restartOn": {
        "files": ["./api.py", "./run_api.py", "./db/models.py", "./db/database.py", "./db/__init__.py", "./models.py"]
      }
    },
    {
      "name": "BasicAPI",
      "type": "web",
      "command": "./run_basic_api.sh",
      "restartOn": {
        "files": ["./basic_api.py"]
      }
    },
    {
      "name": "SimpleValuationAPI",
      "type": "web",
      "command": "./run_simple_api.sh",
      "restartOn": {
        "files": ["./simple_valuation_api.py"]
      }
    }
  ]
}